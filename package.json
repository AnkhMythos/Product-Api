{
  "name": "product-api",
  "version": "1.0.0",
  "description": "API REST para gestión de productos con autenticación JWT",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
