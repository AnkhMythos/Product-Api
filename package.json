    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase": "^12.6.0",
    "firebase-admin": "^11.8.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1"
  },
